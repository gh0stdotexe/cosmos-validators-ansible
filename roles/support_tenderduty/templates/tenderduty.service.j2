[Unit]
Description={{ network }} Tenderduty
After=network-online.target

[Service]
User={{ ansible_user }}
ExecStart={{ user_dir }}/go/bin/tenderduty  -p {{ pagerduty_key }} -c {{ key }}  -u http://{{ target_ip }}:{{ custom_port_prefix }}57
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
